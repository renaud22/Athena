{#
    Documentation des paramètres possibles :
    - Obligatoire :
        - body : Contenu pour le corps de la carte
    - Optionnel :
        - icon : Icône Bootstrap à afficher à côté du titre
        - title : Titre de la carte
        - header_actions : Bloc optionnel pour les actions dans l'en-tête
        - footer : Contenu optionnel pour le pied de la carte
#}

<div class="card athena-card border-0 shadow-sm">

    {# Header (Optionnel si title ou header_actions définis) #}
    {% if title is defined or block('header_actions') is defined %}
        <div class="card-header border-bottom border-secondary py-3 d-flex justify-content-between align-items-center">
            <h3 class="h5 text-primary mb-0 fw-bold">
                {% if icon is defined %}
                    <i class="text-primary bi {{ icon }} me-2"></i>
                {% endif %}

                {{ title|default('')|raw }}
            </h3>
            <div class="card-actions">
                {% block header_actions %}{% endblock %}
            </div>
        </div>
    {% endif %}

    {# Body (Obligatoire) #}
    <div class="card-body p-4">
        {% block body %}{% endblock %}
    </div>

    {# Footer (Optionnel) #}
    {% if block('footer') is defined %}
        <div class="card-footer bg-transparent border-top border-secondary py-3">
            {% block footer %}{% endblock %}
        </div>
    {% endif %}

</div>
