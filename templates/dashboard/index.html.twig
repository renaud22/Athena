{% extends 'base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom border-secondary">
        <h1 class="h2">Dashboard</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
            <div class="btn-group me-2">
                <button type="button" class="btn btn-sm btn-outline-secondary">Partager</button>
                <button type="button" class="btn btn-sm btn-outline-secondary">Exporter</button>
            </div>
            <button type="button" class="btn btn-sm btn-outline-secondary dropdown-toggle">
                <span data-feather="calendar"></span>
                Cette semaine
            </button>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title text-primary">Projets en cours</h5>
                    <p class="card-text display-4">3</p>
                    <a href="#" class="btn btn-primary btn-sm">Voir les projets</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title text-primary">Prospects Chauds</h5>
                    <p class="card-text display-4">12</p>
                    <a href="#" class="btn btn-primary btn-sm">Voir les prospects</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title text-primary">Chiffre d'Affaires (Mois)</h5>
                    <p class="card-text display-4">0 €</p>
                    <a href="#" class="btn btn-primary btn-sm">Détails</a>
                </div>
            </div>
        </div>
    </div>

    <h2 class="mt-5 mb-3">Activité Récente</h2>
    <div class="row">
        <div class="col-12">
            <div class="card bg-dark border-secondary">
                <div class="list-group list-group-flush">
                    <div class="list-group-item bg-dark border-secondary text-light d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="mb-0 text-primary">Relance Client X</h6>
                            <small class="text-muted">Email - 11/12/2025</small>
                        </div>
                        <span class="badge bg-success">Fait</span>
                    </div>
                    <div class="list-group-item bg-dark border-secondary text-light d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="mb-0 text-primary">Devis Site Web</h6>
                            <small class="text-muted">Proposition - 10/12/2025</small>
                        </div>
                        <span class="badge bg-warning text-dark">En attente</span>
                    </div>
                    <div class="list-group-item bg-dark border-secondary text-light d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="mb-0 text-primary">Réunion Lancement</h6>
                            <small class="text-muted">Meeting - 09/12/2025</small>
                        </div>
                        <span class="badge bg-secondary">Terminé</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
